<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.qfq.tainzhi.videoplayer">
	
	<uses-feature
		android:name="android.software.leanback" android:required="false" />
	<uses-feature
		android:name="android.hardware.touchscreen" android:required="false" />
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
	
	<application
		android:name="com.tainzhi.android.videoplayer.App" android:allowBackup="true" android:banner="@string/app_name"
		android:networkSecurityConfig="@xml/network_security_config"
		android:icon="@drawable/ic_video" android:label="@string/app_name" android:theme="@style/AppTheme.DayNight">
		<activity android:name="com.tainzhi.android.videoplayer.ui.PlayVideoViewActivity"/>
		<activity android:name="com.tainzhi.android.videoplayer.ui.MainActivity" />
		<activity
			android:name="com.tainzhi.android.videoplayer.ui.SplashActivity" android:theme="@style/AppTheme.Splash">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				
				<category android:name="android.intent.category.LEANBACK_LAUNCHER" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".ui.activity.DefaultPlayActivity" android:keepScreenOn="true" android:screenOrientation="fullSensor" />
		<activity
			android:name=".ui.activity.IjkPlayerActivity" android:keepScreenOn="true" android:screenOrientation="fullSensor" />
		<activity
			android:name=".DoubleVideoPlayerActivity" android:screenOrientation="fullSensor" />
		<activity android:name="com.tainzhi.android.videoplayer.ui.PlayActivity" />
	</application>

</manifest>