<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/activity_single_video_player_player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/activity_single_video_player_player_title_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="top|center"
        android:background="@android:drawable/toast_frame">
        <TextView
            android:id="@+id/activity_single_video_player_player_video_title"
            android:text="This a vidoe title"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:textSize="30sp"
            android:textColor="#ffffff" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_single_video_player_player_controller_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:layout_gravity="bottom"
        android:background="@android:drawable/toast_frame">
        <ImageView
            android:id="@+id/activity_single_video_player_player_controller_control"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:focusable="true"
            android:src="@drawable/activity_single_video_player_control_play"
            android:layout_gravity="center" />

        <SeekBar
            android:id="@+id/activity_single_video_player_player_controller_progress"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:layout_weight="0.92"
            android:indeterminate="false"
            android:progressBackgroundTint="#ff1957"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/activity_single_video_player_player_controller_floatwindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:focusable="true"
            android:src="@drawable/activity_single_video_player_control_floatwindow"
            android:layout_gravity="center" />
    </LinearLayout>
</FrameLayout>
