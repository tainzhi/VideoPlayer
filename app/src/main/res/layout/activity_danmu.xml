<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.tainzhi.android.videoplayer.ui.DanmuActivity"
	>

	<com.tainzhi.android.danmu.advancedanmu.view.DanmuContainerView
		android:id="@+id/danmuContainerView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		/>

	<Button
		android:id="@+id/addDanmuBtn"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="30dp"
		android:text="add"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/hideDanmuBtn"
		app:layout_constraintStart_toStartOf="parent"
		/>
	
	<Button
		android:id="@+id/hideDanmuBtn"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="30dp"
		android:text="hide all"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/addDanmuBtn"
		/>
</androidx.constraintlayout.widget.ConstraintLayout>