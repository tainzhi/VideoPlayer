<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<com.wuhenzhizao.titlebar.widget.CommonTitleBar
			android:id="@+id/commonTitleBar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:layout_height="?actionBarSize"
			app:statusBarMode="light"
			app:statusBarColor="?colorPrimaryDark"
			app:titleBarColor="?colorPrimary"
			app:centerType="textView"
			app:centerText="@string/title_tv"
			app:centerTextColor="?colorOnPrimary"
			app:rightImageResource="@drawable/ic_search"
			app:rightType="imageButton"
			app:showBottomLine="false"
			app:layout_constraintTop_toTopOf="parent" />
		
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/tvRecyclerView"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			app:layout_constraintTop_toBottomOf="@+id/commonTitleBar"
			tools:listitem="@layout/item_tv" />
	
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>