<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_item_staggredview"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_staggredview_thumbnail"
            android:layout_margin="5dp"
            android:layout_width="200dp"
            android:layout_height="150dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@id/item_staggredview_thumbnail"
            android:layout_toStartOf="@+id/item_staggredview_thumbnail"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                tools:text="这是一个视频名称, 测试text多行显示, 想多长, 就多长, 就是这么强壮"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_video_title"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:textSize="10dp">

                <TextView
                    android:id="@+id/item_video_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="100.5G" />

                <TextView
                    android:id="@+id/item_video_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1:59:99" />

                <TextView
                    android:id="@+id/item_video_date_added"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="00:25:25" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/item_content"
        android:background="@color/line_divider" />

</RelativeLayout>