<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l_video_player_bottom_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/video_player_panel_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/video_player_bottom_panel_play"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:focusable="true"
        android:src="@drawable/ic_video_player_play" />

    <SeekBar
        android:id="@+id/activity_default_video_player_player_controller_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.92"
        android:indeterminate="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:progressBackgroundTint="#ff1957" />

    <ImageView
        android:id="@+id/video_player_bottom_panel_float_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:focusable="true"
        android:src="@drawable/ic_video_player_float_window" />

    <ImageView
        android:id="@+id/video_player_bottom_panel_follow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_video_player_follow" />
</LinearLayout>
