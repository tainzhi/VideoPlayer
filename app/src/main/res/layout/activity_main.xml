    tools:context="com.qfq.muqing.myvideoplayer.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selection_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp"></androidx.recyclerview.widget.RecyclerView>
    <ViewStub
        android:id="@+id/viewstub_novideo_hint_layout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/viewstub_novideo_hint_layout"/>

</LinearLayout>

