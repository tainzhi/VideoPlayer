<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<com.wuhenzhizao.titlebar.widget.CommonTitleBar
			android:id="@+id/commonTitleBar"
			android:layout_width="match_parent"
			android:layout_height="?actionBarSize"
			app:fillStatusBar="true"
			app:statusBarMode="light"
			app:showBottomLine="false"
			app:rightImageResource="@drawable/ic_search"
			app:titleBarColor="?colorPrimary"
			app:centerText="@string/title_local_video"
			app:layout_constraintBottom_toTopOf="@id/localVideoRecyclerView"
			app:layout_constraintTop_toTopOf="parent" />
		
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/localVideoRecyclerView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/commonTitleBar"
			tools:listitem="@layout/item_local_video" />
			
			<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:id="@+id/localVideoFab"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="36dp"
				android:layout_marginBottom="64dp"
				android:src="@drawable/ic_play_arrow"
				app:elevation="8dp"
				app:fabCustomSize="56dp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:maxImageSize="48dp"
				app:pressedTranslationZ="10dp"
				app:rippleColor="?colorAccent"
				app:tint="@android:color/white" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>