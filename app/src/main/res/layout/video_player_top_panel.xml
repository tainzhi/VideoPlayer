<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_video_player_top_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/video_player_top_panel_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="返回"
        android:src="@drawable/ic_video_player_back" />

    <TextView
        android:id="@+id/video_player_top_panel_video_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/video_player_top_panel_back"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="30sp"
        tools:text="This a vidoe title" />
    <TextView
        android:id="@+id/video_player_top_panel_system_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/video_player_top_panel_battery"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:text="12:00:00" />

    <ImageView
        android:id="@+id/video_player_top_panel_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:contentDescription="电池电量"
        android:src="@drawable/ic_video_player_battery_0" />

</RelativeLayout>
