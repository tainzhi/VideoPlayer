<resources>
    <style name="AppTheme.Splash" parent="AppTheme.DayNight">
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
<!--        &lt;!&ndash;Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色&ndash;&gt;-->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
<!--        <item name="android:windowNoTitle">true</item>-->
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="animation_single_video_player_progress_popwindow" parent="android:Animation">
        <item name="android:windowEnterAnimation">
            @anim/animation_single_video_player_progress_popwindow_enter
        </item>
        <item name="android:windowExitAnimation">
            @anim/animation_single_video_player_progress_popwindow_exit
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Design.BottomNavigationView" parent="">
        <item name="itemBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="elevation">@dimen/design_bottom_navigation_elevation</item>
    </style>
	
	<style name="VideoTheme.LocalVideo.VideoDetailsTag" parent="AppTheme.DayNight">
		<item name="android:background">@drawable/bg_grey_tag</item>
		<item name="android:textSize">10sp</item>
	</style>

<!--    <style name="TranslucentTheme" parent="AppTheme.NoActionBar">-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
<!--        &lt;!&ndash;Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色&ndash;&gt;-->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
<!--    </style>-->
	
	<style name="VideoTheme.Settings" parent="AppTheme.DayNight">
		<item name="android:gravity">start|center_vertical</item>
		<item name="android:minHeight">?listPreferredItemHeightSmall</item>
		<item name="android:paddingBottom">@dimen/spacing_normal</item>
		<item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
		<item name="android:paddingStart">?listPreferredItemPaddingStart</item>
		<item name="android:textAlignment">viewStart</item>
		<item name="android:paddingTop">@dimen/spacing_normal</item>
		<item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
	</style>
	
	<style name="VideoTheme.Settings.Button">
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:clickable">true</item>
	</style>
	
	<style name="VideoTheme.Settings.Switch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
		<item name="android:background">@null</item>
		<item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
		<item name="android:padding">@dimen/margin_normal</item>
		<item name="android:textAlignment">viewStart</item>
		<item name="switchPadding">@dimen/margin_small</item>
		<item name="colorControlActivated">?colorPrimary</item>
		<item name="colorControlNormal">@color/color_background</item>
		<item name="switchTextAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
	</style>
	
	<style name="VideoTheme.Settings.Button.About">
		<item name="android:clickable">false</item>
		<item name="switchTextAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
	</style>
	
	<style name="VideoTheme.Settings.Button.WebLink">
		<item name="android:textColor">@android:color/holo_blue_bright</item>
	</style>
	
	<style name="VideoTheme.Tv" parent="Widget.MaterialComponents.TextView">
		<item name="android:textSize">10sp</item>
	</style>
</resources>
